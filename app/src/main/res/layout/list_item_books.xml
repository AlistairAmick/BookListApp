<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LlListItemStyle"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextViewBookTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title Displayed Here, Title Displayed Here, Title Displayed Here, Title Displayed Here" />

        <TextView
            android:id="@+id/authors"
            style="@style/TextViewBookAuthorsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Author Displayed Here, Author Displayed Here, Author Displayed Here, Author Displayed Here" />

    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/tv_date_marginStart"
        android:layout_weight="1"
        tools:text="02-04-2018" />

</LinearLayout>